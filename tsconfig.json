{
    "compilerOptions": {
        "outDir": "./transpiled/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "baseUrl": "./src/",
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "*": ["node_modules/*"],
        },
        "resolveJsonModule": true
    },
    "include": ["./src/**/*", "./src/contracts/**/*"]
}
